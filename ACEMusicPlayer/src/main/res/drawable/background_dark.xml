<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape
            android:shape="rectangle"
            android:dither="true" >

            <corners android:radius="2dp" />

            <solid android:color="#CECECE" />

        </shape>
    </item>

    <item
        android:bottom="1dp" >

        <shape
            android:shape="rectangle"
            android:dither="true" >

            <corners
                android:radius="2dp" />

            <gradient
                android:startColor="#00F8F8F6"
                android:centerColor="#00F8F8F6"
                android:endColor="#00F8F8F6"
                android:angle="90"
                android:dither="true"
                />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>

    </item>

</layer-list>